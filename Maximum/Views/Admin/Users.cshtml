@model IEnumerable<Maximum.Controllers.UserViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 text-danger mb-2">
                        <i class="fas fa-users-cog me-3"></i>Управление пользователями
                    </h1>
                    <p class="text-muted mb-0">Администрирование пользователей системы</p>
                </div>
                <a class="btn btn-danger btn-lg" asp-action="CreateUser">
                    <i class="fas fa-user-plus me-2"></i>Добавить пользователя
                </a>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Уведомления -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-danger mb-1 stats-number">@Model.Count()</h4>
                                <small class="text-muted">Всего пользователей</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-success mb-1 stats-number">@Model.Count(u => u.IsActive)</h4>
                                <small class="text-muted">Активных</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1 stats-number">@Model.Count(u => u.Roles.Contains("Admin"))</h4>
                                <small class="text-muted">Администраторов</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div>
                                <h4 class="text-info mb-1 stats-number">@Model.Count(u => u.Roles.Contains("User"))</h4>
                                <small class="text-muted">Пользователей</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Таблица пользователей -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Список пользователей
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Пользователи не найдены</h5>
                            <p class="text-muted">Добавьте первого пользователя, чтобы начать работу</p>
                            <a class="btn btn-danger" asp-action="CreateUser">
                                <i class="fas fa-user-plus me-2"></i>Добавить пользователя
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">
                                            <i class="fas fa-user me-2"></i>Пользователь
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-envelope me-2"></i>Email
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-shield-alt me-2"></i>Роли
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-toggle-on me-2"></i>Статус
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-calendar me-2"></i>Дата регистрации
                                        </th>
                                        <th class="border-0 text-end">
                                            <i class="fas fa-cogs me-2"></i>Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-danger text-white me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@(user.FirstName ?? "Не указано") @(user.LastName ?? "")</h6>
                                                        <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="mailto:@user.Email" class="text-decoration-none">
                                                    <i class="fas fa-envelope me-1"></i>@user.Email
                                                </a>
                                            </td>
                                            <td>
                                                @foreach (var role in user.Roles)
                                                {
                                                    if (role == "Admin")
                                                    {
                                                        <span class="badge bg-danger me-1">
                                                            <i class="fas fa-shield-alt me-1"></i>@role
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-primary me-1">
                                                            <i class="fas fa-user me-1"></i>@role
                                                        </span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Активен
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times me-1"></i>Неактивен
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span>@user.RegistrationDate.ToString("dd.MM.yyyy")</span>
                                                <br>
                                                <small class="text-muted">@user.RegistrationDate.ToString("HH:mm")</small>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="EditUser" asp-route-id="@user.Id" title="Редактировать">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (user.Id != User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                                    {
                                                        <form asp-action="DeleteUser" method="post" style="display: inline;" 
                                                              onsubmit="return confirm('Вы уверены, что хотите удалить этого пользователя?')">
                                                            <input type="hidden" name="id" value="@user.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Добавляем анимацию для строк таблицы
            $('tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>
}
