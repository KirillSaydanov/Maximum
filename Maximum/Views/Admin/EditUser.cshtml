@model Maximum.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "Редактирование пользователя";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a href="@Url.Action("Users")" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h1 class="display-6 text-danger mb-2">
                        <i class="fas fa-user-edit me-3"></i>Редактирование пользователя
                    </h1>
                    <p class="text-muted mb-0">Изменение данных пользователя и его ролей</p>
                </div>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Форма редактирования -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Информация о пользователе
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Имя <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Введите имя" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Фамилия <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control form-control-lg" placeholder="Введите фамилию" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input value="@Model.Email" class="form-control form-control-lg" readonly />
                            <small class="text-muted">Email нельзя изменить</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-toggle-on me-2"></i>Статус аккаунта
                            </label>
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    Активен
                                </label>
                            </div>
                            <small class="text-muted">Неактивные пользователи не могут войти в систему</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-shield-alt me-2"></i>Роли пользователя
                            </label>
                            <div class="row">
                                @foreach (var role in Model.AllRoles)
                                {
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Roles" value="@role" 
                                                   id="role_@role" @(Model.Roles?.Contains(role) == true ? "checked" : "") />
                                            <label class="form-check-label" for="role_@role">
                                                @if (role == "Admin")
                                                {
                                                    <span class="badge bg-danger me-2">@role</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary me-2">@role</span>
                                                }
                                                @role
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <small class="text-muted">Выберите роли для пользователя. Можно выбрать несколько ролей.</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-outline-secondary btn-lg" asp-action="Users">
                                <i class="fas fa-times me-2"></i>Отмена
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Автофокус на первое поле
            $('#FirstName').focus();
            
            // Валидация в реальном времени
            $('input[type="text"]').on('input', function() {
                var field = $(this);
                var validationSpan = field.siblings('span[data-valmsg-for]');
                
                if (field.val().trim() === '') {
                    field.addClass('is-invalid');
                    validationSpan.show();
                } else {
                    field.removeClass('is-invalid');
                    validationSpan.hide();
                }
            });

            // Анимация для переключателя статуса
            $('#isActiveSwitch').on('change', function() {
                var isChecked = $(this).is(':checked');
                if (isChecked) {
                    $(this).addClass('animate__animated animate__bounceIn');
                    setTimeout(() => {
                        $(this).removeClass('animate__animated animate__bounceIn');
                    }, 1000);
                }
            });

            // Проверяем, что хотя бы одна роль выбрана
            $('input[name="Roles"]').on('change', function() {
                var checkedRoles = $('input[name="Roles"]:checked');
                if (checkedRoles.length === 0) {
                    // Показываем предупреждение
                    if (!$('.role-warning').length) {
                        $('<div class="alert alert-warning role-warning mt-2">' +
                          '<i class="fas fa-exclamation-triangle me-2"></i>' +
                          'Рекомендуется выбрать хотя бы одну роль для пользователя' +
                          '</div>').insertAfter($(this).closest('.mb-4'));
                    }
                } else {
                    $('.role-warning').remove();
                }
            });
        });
    </script>
}
