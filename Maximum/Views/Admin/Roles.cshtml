@model IEnumerable<Maximum.Controllers.RoleViewModel>
@{
    ViewData["Title"] = "Управление ролями";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 text-danger mb-2">
                        <i class="fas fa-user-tag me-3"></i>Управление ролями
                    </h1>
                    <p class="text-muted mb-0">Администрирование ролей пользователей системы</p>
                </div>
                <a href="@Url.Action("Users")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>К пользователям
                </a>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Уведомления -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="border-end">
                                <h4 class="text-danger mb-1 stats-number">@Model.Count()</h4>
                                <small class="text-muted">Всего ролей</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1 stats-number">@Model.Sum(r => r.UserCount)</h4>
                                <small class="text-muted">Пользователей с ролями</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div>
                                <h4 class="text-info mb-1 stats-number">@Model.Max(r => r.UserCount)</h4>
                                <small class="text-muted">Максимум пользователей в роли</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Создание новой роли -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Создать новую роль
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateRole" method="post" class="row g-3">
                        <div class="col-md-8">
                            <label for="roleName" class="form-label">
                                <i class="fas fa-tag me-2"></i>Название роли
                            </label>
                            <input type="text" id="roleName" name="roleName" class="form-control form-control-lg" 
                                   placeholder="Введите название новой роли" required />
                            <small class="text-muted">Роль будет создана с указанным названием</small>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-danger btn-lg w-100">
                                <i class="fas fa-plus me-2"></i>Создать роль
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Таблица ролей -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Список ролей
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Роли не найдены</h5>
                            <p class="text-muted">Создайте первую роль, чтобы начать работу</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">
                                            <i class="fas fa-tag me-2"></i>Роль
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-users me-2"></i>Пользователей
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-info-circle me-2"></i>Описание
                                        </th>
                                        <th class="border-0 text-end">
                                            <i class="fas fa-cogs me-2"></i>Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-danger text-white me-3">
                                                        <i class="fas fa-shield-alt"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@role.Name</h6>
                                                        <small class="text-muted">ID: @role.Id.Substring(0, 8)...</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@role.UserCount</span>
                                                @if (role.UserCount == 0)
                                                {
                                                    <br><small class="text-muted">Нет пользователей</small>
                                                }
                                                else if (role.UserCount == 1)
                                                {
                                                    <br><small class="text-muted">1 пользователь</small>
                                                }
                                                else if (role.UserCount < 5)
                                                {
                                                    <br><small class="text-muted">@role.UserCount пользователя</small>
                                                }
                                                else
                                                {
                                                    <br><small class="text-muted">@role.UserCount пользователей</small>
                                                }
                                            </td>
                                            <td>
                                                @if (role.Name == "Admin")
                                                {
                                                    <span class="text-danger">
                                                        <i class="fas fa-shield-alt me-1"></i>Полный доступ к системе
                                                    </span>
                                                }
                                                else if (role.Name == "User")
                                                {
                                                    <span class="text-primary">
                                                        <i class="fas fa-user me-1"></i>Стандартный пользователь
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-tag me-1"></i>Пользовательская роль
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    @if (role.UserCount == 0 && role.Name != "Admin" && role.Name != "User")
                                                    {
                                                        <form asp-action="DeleteRole" method="post" style="display: inline;" 
                                                              onsubmit="return confirm('Вы уверены, что хотите удалить роль @role.Name?')">
                                                            <input type="hidden" name="roleName" value="@role.Name" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить роль">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-secondary" disabled title="Роль нельзя удалить">
                                                            <i class="fas fa-lock"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Добавляем анимацию для строк таблицы
            $('tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );

            // Автофокус на поле создания роли
            $('#roleName').focus();
        });
    </script>
}
