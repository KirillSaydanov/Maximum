@model Maximum.Models.ApplicationUser
@{
    ViewData["Title"] = "Профиль";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Имя:</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>
                            
                            <dt class="col-sm-4">Фамилия:</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            
                            <dt class="col-sm-4">Дата регистрации:</dt>
                            <dd class="col-sm-8">@Model.RegistrationDate.ToString("dd.MM.yyyy")</dd>
                            
                            <dt class="col-sm-4">Статус:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Неактивен</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-user-circle fa-5x text-primary"></i>
                            </div>
                            <p class="text-muted">Добро пожаловать в систему!</p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 text-center">
                    <form asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Выйти</button>
                    </form>
                    <a asp-controller="Main" asp-action="Index" class="btn btn-secondary">На главную</a>
                </div>
            </div>
        </div>
    </div>
</div>
