@model IEnumerable<Maximum.Models.Client>
@{
    ViewData["Title"] = "Клиенты";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Клиенты</h2>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Добавить</a>
    </div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Имя</th>
        <th>Телефон</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.FullName</td>
            <td>@c.Phone</td>
            <td>@c.Email</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id"><i class="fas fa-eye"></i></a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id"><i class="fas fa-edit"></i></a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
    </table>


