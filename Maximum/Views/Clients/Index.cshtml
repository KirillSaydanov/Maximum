@model IEnumerable<Maximum.Models.Client>
@{
    ViewData["Title"] = "Клиенты";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 text-primary mb-2">
                        <i class="fas fa-users me-3"></i>Клиенты
                    </h1>
                    <p class="text-muted mb-0">Управление базой клиентов клиники</p>
                </div>
                <a class="btn btn-primary btn-lg" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Добавить клиента
                </a>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1 stats-number">@Model.Count()</h4>
                                <small class="text-muted">Всего клиентов</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-success mb-1 stats-number">@Model.Count(c => !string.IsNullOrEmpty(c.Email))</h4>
                                <small class="text-muted">С email</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-info mb-1 stats-number">@Model.Count(c => !string.IsNullOrEmpty(c.Phone))</h4>
                                <small class="text-muted">С телефоном</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div>
                                <h4 class="text-warning mb-1 stats-number">@Model.Count(c => c.BirthDate.HasValue)</h4>
                                <small class="text-muted">С датой рождения</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Таблица клиентов -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Список клиентов
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Клиенты не найдены</h5>
                            <p class="text-muted">Добавьте первого клиента, чтобы начать работу</p>
                            <a class="btn btn-primary" asp-action="Create">
                                <i class="fas fa-plus me-2"></i>Добавить клиента
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">
                                            <i class="fas fa-user me-2"></i>Имя
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-phone me-2"></i>Телефон
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-envelope me-2"></i>Email
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-birthday-cake me-2"></i>Дата рождения
                                        </th>
                                        <th class="border-0 text-end">
                                            <i class="fas fa-cogs me-2"></i>Действия
                                        </th>
    </tr>
    </thead>
    <tbody>
                                    @foreach (var client in Model)
    {
        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-primary text-white me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@client.FullName</h6>
                                                        @if (!string.IsNullOrEmpty(client.Notes))
                                                        {
                                                            <small class="text-muted">@(client.Notes.Length > 50 ? client.Notes.Substring(0, 50) + "..." : client.Notes)</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(client.Phone))
                                                {
                                                    <a href="tel:@client.Phone" class="text-decoration-none">
                                                        <i class="fas fa-phone me-1"></i>@client.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(client.Email))
                                                {
                                                    <a href="mailto:@client.Email" class="text-decoration-none">
                                                        <i class="fas fa-envelope me-1"></i>@client.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                            <td>
                                                @if (client.BirthDate.HasValue)
                                                {
                                                    <span>@client.BirthDate.Value.ToString("dd.MM.yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указана</span>
                                                }
                                            </td>
            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@client.Id" title="Просмотр">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@client.Id" title="Редактировать">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@client.Id" title="Удалить">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
            </td>
        </tr>
    }
    </tbody>
    </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Добавляем анимацию для строк таблицы
            $('tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>
}


