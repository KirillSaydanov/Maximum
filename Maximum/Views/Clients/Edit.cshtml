@model Maximum.Models.Client
@{
    ViewData["Title"] = "Редактирование клиента";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h1 class="display-6 text-primary mb-2">
                        <i class="fas fa-edit me-3"></i>Редактирование клиента
                    </h1>
                    <p class="text-muted mb-0">Изменение информации о клиенте</p>
                </div>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Форма редактирования -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Информация о клиенте
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Полное имя <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Введите полное имя" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-2"></i>Телефон
                                </label>
                                <input asp-for="Phone" class="form-control form-control-lg" placeholder="+7 (999) 123-45-67" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="client@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BirthDate" class="form-label">
                                    <i class="fas fa-birthday-cake me-2"></i>Дата рождения
                                </label>
                                <input asp-for="BirthDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="BirthDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label">
                                <i class="fas fa-sticky-note me-2"></i>Заметки
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Дополнительная информация о клиенте..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-outline-secondary btn-lg" asp-action="Index">
                                <i class="fas fa-times me-2"></i>Отмена
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Автофокус на первое поле
            $('#FullName').focus();
            
            // Валидация в реальном времени
            $('input, textarea').on('input', function() {
                var field = $(this);
                var validationSpan = field.siblings('span[data-valmsg-for]');
                
                if (field.val().trim() === '') {
                    field.addClass('is-invalid');
                    validationSpan.show();
                } else {
                    field.removeClass('is-invalid');
                    validationSpan.hide();
                }
            });
        });
    </script>
}


