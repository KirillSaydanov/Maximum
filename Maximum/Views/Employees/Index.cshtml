@model IEnumerable<Maximum.Models.Employee>
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 text-success mb-2">
                        <i class="fas fa-user-md me-3"></i>Сотрудники
                    </h1>
                    <p class="text-muted mb-0">Управление персоналом и специалистами клиники</p>
                </div>
                <a class="btn btn-success btn-lg" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Добавить сотрудника
                </a>
            </div>
            <hr class="my-3">
        </div>
    </div>

    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-success mb-1 stats-number">@Model.Count()</h4>
                                <small class="text-muted">Всего сотрудников</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1 stats-number">@Model.Count(e => e.IsActive)</h4>
                                <small class="text-muted">Активных</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-end">
                                <h4 class="text-info mb-1 stats-number">@Model.Select(e => e.Specialty).Distinct().Count()</h4>
                                <small class="text-muted">Специализаций</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div>
                                <h4 class="text-warning mb-1 stats-number">@Model.Count(e => !string.IsNullOrEmpty(e.Email))</h4>
                                <small class="text-muted">С email</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Таблица сотрудников -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Список сотрудников
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Сотрудники не найдены</h5>
                            <p class="text-muted">Добавьте первого сотрудника, чтобы начать работу</p>
                            <a class="btn btn-success" asp-action="Create">
                                <i class="fas fa-plus me-2"></i>Добавить сотрудника
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">
                                            <i class="fas fa-user me-2"></i>Имя
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-stethoscope me-2"></i>Специализация
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-phone me-2"></i>Телефон
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-envelope me-2"></i>Email
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-toggle-on me-2"></i>Статус
                                        </th>
                                        <th class="border-0 text-end">
                                            <i class="fas fa-cogs me-2"></i>Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-success text-white me-3">
                                                        <i class="fas fa-user-md"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@employee.FullName</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@employee.Specialty</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(employee.Phone))
                                                {
                                                    <a href="tel:@employee.Phone" class="text-decoration-none">
                                                        <i class="fas fa-phone me-1"></i>@employee.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(employee.Email))
                                                {
                                                    <a href="mailto:@employee.Email" class="text-decoration-none">
                                                        <i class="fas fa-envelope me-1"></i>@employee.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                            <td>
                                                @if (employee.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Активен
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times me-1"></i>Неактивен
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@employee.Id" title="Редактировать">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@employee.Id" title="Удалить">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Добавляем анимацию для строк таблицы
            $('tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>
}


