@model IEnumerable<Maximum.Models.Employee>
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Сотрудники</h2>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Добавить</a>
</div>

<table class="table table-hover align-middle">
    <thead>
    <tr>
        <th>Имя</th>
        <th>Специализация</th>
        <th>Телефон</th>
        <th>Email</th>
        <th>Активен</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.FullName</td>
            <td>@e.Specialty</td>
            <td>@e.Phone</td>
            <td>@e.Email</td>
            <td>
                @if (e.IsActive) { <span class="badge bg-success">Да</span>; } else { <span class="badge bg-secondary">Нет</span>; }
            </td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@e.Id"><i class="fas fa-edit"></i></a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>


